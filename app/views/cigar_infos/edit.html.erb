<h1>編集</h1>
<%= form_with model: @cigarinfo, local: true do |form| %>
  <div>
    <%= form.label :brand, "銘柄" %>
    <%= form.text_field :brand %>
  </div>
  <div>
    <%= form.label :price, "値段" %>
    <%= form.text_field :price %>
  </div>
  <div>
    <%= form.label :text, "レビュー" %>
    <%= form.text_area :text %>
  </div>
  <div>
    <%= form.submit "送信" %>
  </div>
<% end %>
