<%= render "layouts/error_messages" %>
<%= form_with model: @cigarinfo, local: true do |form| %>
  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :brand, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_area :text, class: "form-control", rows: 10 %>
  </div>
  <div>
    <%= form.submit button_value, class: "btn btn-primary btn-block" %>
  </div>
<% end %>
