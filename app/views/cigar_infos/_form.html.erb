<%= render "layouts/error_messages" %>
<%= form_with model: @cigarinfo, local: true do |form| %>
  <div>
    <%= form.label :brand %>
    <%= form.text_field :brand %>
  </div>
  <div>
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>
  <div>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>
  <div>
    <%= form.submit button_value %>
  </div>
<% end %>
