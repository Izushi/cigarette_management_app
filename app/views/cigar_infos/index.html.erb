<!-- ***** 以上を追加 ***** -->
<h1>タバコ情報一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">銘柄</th>
      <th scope="col">値段</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @cigarinfos.each.with_index(1) do |cigarinfo, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= cigarinfo.brand %></td>
        <td><%= cigarinfo.price %>円</td>
        <td>
          <%= link_to "詳細", cigarinfo %>
          <%= link_to "編集", edit_cigar_info_path(cigarinfo) %>
          <%= link_to "削除", cigarinfo, method: :delete, data: { confirm: "削除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
