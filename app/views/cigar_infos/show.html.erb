<h2 class="text-center">タバコ詳細</h2>
<section class="card border-dark mt-5">
  <div class="text-center card-header">
    <h4><%= @cigarinfo.brand %></h4>
  </div>
  <div class="card-body">
    <td>
      <p><%= image_tag @cigarinfo.img.url, class:'pic' if @cigarinfo.img? %></p>
      <h5><%= @cigarinfo.price %>円</h5>
    </td>
    <td><%= simple_format(@cigarinfo.text) %></td>
    <%# < class="card-text"><%= simple_format(h @cigarinfo.text)%>
  </div>
</section>

<br>
<div class="text-center">
  <td>
    <%= link_to 'タバコ情報を編集', edit_cigar_info_path, class: " btn-edit" %>
  </td>
  <td>
    <%= link_to 'コレクションに戻る', cigar_infos_path, class: "btn-delete" %>
  </td>
</div>
