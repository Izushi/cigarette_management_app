<%= render "layouts/error_messages2" %>
<%= form_with model: @profile, local: true do |form| %>
  <div class="form-group">
    <%= form.label :box_price %>
    <%= form.text_field :box_price, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :cigar_amount %>
    <%= form.text_field :cigar_amount, class: "form-control" %>
  </div>
  <div>
    <%= form.submit button_value, class: "btn btn-primary btn-block" %>
  </div>
<% end %>
