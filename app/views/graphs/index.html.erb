<canvas id="chart-cigarette" class="mt-5"></canvas>
<%= render 'modal', action: 'new', title: '新規登録' %>
<%= render 'modal', action: 'edit', title: '修正' %>

<br>
<h3><%= @month.month %>月の記録</h3>
<ul class="monthly_record">
  <li class="monthly_list"><i class="fas fa-chevron-circle-right"></i> 月間合計 <%= @cigarettes %>本</li>

  <% if @average.nan? %>
    <li class="monthly_list"><i class="fas fa-chevron-circle-right"></i> 1日平均 0本</li>
  <% else %>
    <li class="monthly_list"><i class="fas fa-chevron-circle-right"></i> 1日平均 <%= @average %>本</li>
  <% end %>

  <% if @profile.nil? %>
  
  <% else %>
    <li class="monthly_list"><i class="fas fa-chevron-circle-right"></i> 今月の出費 <%= @actual_monthly_cost %>円</li>
    <li class="monthly_list"><i class="fas fa-chevron-circle-right"></i> 普段の出費 <%= @ordinary_monthly_cost %>円</li>
    <li class="monthly_list"><i class="fas fa-chevron-circle-right"></i> 今月節約した金額 <%= @ordinary_monthly_cost-@actual_monthly_cost %>円</li>
  <% end %>
</ul>

<div class="text-center">
  <%= link_to "< 前の月",root_path(month:@month.prev_month), {class: "month-link"} %>
  <%= link_to "次の月 >",root_path(month:@month.next_month), {class: "month-link"} %>
</div>
